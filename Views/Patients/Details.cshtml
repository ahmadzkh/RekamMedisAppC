@model RekamMedisAppBaru.Models.Pasien

@{
    ViewData["Title"] = "Detail Pasien";
}

<h1>Detail Pasien</h1>

<div>
    <h4>@Model.Nama</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Nama</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Nama)</dd>

        <dt class="col-sm-2">NIK</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Nik)</dd>

        <dt class="col-sm-2">Tanggal Lahir</dt>
        <dd class="col-sm-10">@Model.TanggalLahir.ToString("dd MMMM yyyy")</dd>

        <dt class="col-sm-2">Jenis Kelamin</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.JenisKelamin)</dd>

        <dt class="col-sm-2">Agama</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Agama)</dd>

        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Status)</dd>

        <dt class="col-sm-2">Pekerjaan</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Pekerjaan)</dd>

        <dt class="col-sm-2">Pendidikan</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Pendidikan)</dd>

        <dt class="col-sm-2">No. Telepon</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.NoTelp)</dd>

        <dt class="col-sm-2">Alamat</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Alamat)</dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.IdPasien" class="btn btn-primary">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Kembali ke Daftar</a>
</div>