@model IEnumerable<RekamMedisAppBaru.Models.Pasien>

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Laporan Data Pasien</title>

    <link rel="stylesheet" href="https://lib.baomitu.com/twitter-bootstrap/4.6.1/css/bootstrap.min.css">

    <style>
        /* CSS INI HANYA AKAN AKTIF SAAT DICETAK/SAVE PDF */
        body {
            font-family: 'Times New Roman', Times, serif; /* Font formal */
            padding: 20px;
        }

        /* Mengatur Header / Kop Surat */
        .header-laporan {
            display: flex;
            align-items: center;
            border-bottom: 3px solid black; /* Garis bawah tebal */
            padding-bottom: 10px;
            margin-bottom: 20px;
        }

        .logo-area {
            width: 100px;
            text-align: center;
        }

        .logo-area img {
            width: 200px; /* Ukuran logo */
        }

        .text-area {
            flex-grow: 1;
            text-align: center;
        }

        .text-area h2 {
            margin: 0;
            font-size: 24px;
            font-weight: bold;
            text-transform: uppercase;
        }

        .text-area p {
            margin: 0;
            font-size: 14px;
        }

        /* Tanda Tangan di bawah (Opsional biar makin keren) */
        .tanda-tangan {
            margin-top: 50px;
            float: right;
            text-align: center;
            width: 200px;
        }

        /* Sembunyikan tombol cetak saat di-print */
        /* Gunakan @@media agar tidak dianggap kode C# */
        @@media print {
            .btn-print {
                display: none;
            }
        }
    </style>
</head>
<body>

    <div class="mb-3">
        <button onclick="window.print()" class="btn btn-primary btn-print">🖨️ Cetak ke PDF</button>
        <a asp-action="Index" class="btn btn-secondary btn-print">Kembali</a>
    </div>

    <div class="header-laporan">
        <div class="logo-area">
            <img src="~/images/logo.png" alt="LOGO" onerror="this.style.display='none'">
        </div>
        <div class="text-area">
            <h2>KLINIK SEHAT SELALU</h2>
            <p>Jl. Raya Meninggi No. 123, Jakarta</p>
            <p>Telp: (021) 555-555 | Email: ahmadzaky@gmail.com</p>
        </div>
    </div>

    <h4 class="text-center mb-4">LAPORAN DATA PASIEN</h4>

    <table class="table table-bordered table-striped">
        <thead class="thead-dark">
            <tr>
                <th>No</th>
                <th>Nama</th>
                <th>NIK</th>
                <th>Jenis Kelamin</th>
                <th>Alamat</th>
                <th>No. Telp</th>
            </tr>
        </thead>
        <tbody>
            @{
                int no = 1;
            }
            @foreach (var item in Model)
            {
                <tr>
                    <td>@(no++)</td>
                    <td>@item.Nama</td>
                    <td>@item.Nik</td>
                    <td>@item.JenisKelamin</td>
                    <td>@item.Alamat</td>
                    <td>@item.NoTelp</td>
                </tr>
            }
        </tbody>
    </table>

    <div class="tanda-tangan">
        <p>Jakarta, @DateTime.Now.ToString("dd MMMM yyyy")</p>
        <br><br><br>
        <p><strong>( Administrator )</strong></p>
    </div>

    <script>
        window.print();
    </script>
</body>
</html>